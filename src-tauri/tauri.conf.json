{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MailClient",
  "version": "0.3.4",
  "identifier": "com.mailclient.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5235",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "MailClient",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Zitroneausquetschen/MailClient/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE5OTVEQkVCOERDODZEMjgKUldRb2JjaU42OXVWcVFBTUtQbUd2cjlFb25oTkpFd2c3YWRUZ3VCZWtBRG8vUnpJZW5SdUR5UHUK"
    }
  }
}
